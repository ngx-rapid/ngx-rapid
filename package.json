{
  "name": "ngx-rapid",
  "author": "Piotr Kosmowski",
  "license": "MIT",
  "private": true,
  "description": "Monorepo for ngx-rapid project",
  "repository": {
    "type": "git",
    "url": "https://github.com/ngx-rapid/ngx-rapid"
  },
  "scripts": {
    "clean": "npm run clean:nodemodules & npm run clean:dist",
    "clean:nodemodules": "lerna clean --yes",
    "clean:dist": "lerna run clean",
    "install": "lerna bootstrap",
    "lint": "lerna run lint",
    "test": "lerna run test",
    "build": "lerna run build",
    "docs": "lerna run docs",
    "site": "lerna run site",
    "deploy": "lerna run deploy",
    "dev": "lerna run --scope @ngx-rapid/site start --stream",
    "version": "lerna publish --repo-version=$REPO_VERSION --skip-git --skip-npm --force-publish=* --yes",
    "publish:git": "git tag v$REPO_VERSION && git push origin v$REPO_VERSION",
    "publish:npm": "lerna publish --repo-version=$REPO_VERSION --skip-git --force-publish=* --yes",
    "publish:site": "npm run docs && npm run site && npm run deploy"
  },
  "devDependencies": {
    "lerna": "^2.7.1"
  }
}
