{
  "name": "ngx-rapid",
  "author": "Piotr Kosmowski",
  "license": "MIT",
  "private": true,
  "description": "Monorepo for ngx-rapid project",
  "repository": {
    "type": "git",
    "url": "https://github.com/ngx-rapid/ngx-rapid"
  },
  "scripts": {
    "clean": "npm run clean:nodemodules & npm run clean:dist",
    "clean:nodemodules": "lerna clean --yes",
    "clean:dist": "lerna run clean",
    "install": "lerna bootstrap",
    "lint": "lerna run lint",
    "test": "lerna run test",
    "build": "lerna run build",
    "docs": "lerna run docs",
    "site": "lerna run site",
    "deploy": "lerna run deploy",
    "dev": "lerna run --scope @ngx-rapid/site start --stream",
    "version:ci": "VERSION=`node -pe \"require('./lerna.json').version\"`-$TRAVIS_BUILD_NUMBER",
    "version": "lerna publish --repo-version=${VERSION} --npm-tag=${VERSION} --skip-npm --force-publish=* --yes",
    "publish": "lerna publish --repo-version=`node -pe \"require('./lerna.json').version\"` --skip-git --force-publish=* --yes && npm run docs && npm run site && npm run deploy"
  },
  "devDependencies": {
    "lerna": "^2.7.1"
  }
}
