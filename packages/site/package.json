{
	"name": "@ngx-rapid/site",
	"version": "0.0.0",
	"description": "",
	"scripts": {
		"site": "rm -rf ./dist/ && npm run build:site && npm run build:demo && npm run build:api",
		"build:site": "cp -r ./src/ ./dist",
		"build:demo": "cp -r ../demo/dist ./dist/demo",
		"build:api": "mkdir ./dist/api && npm run build:api:form && npm run build:api:crud",
		"build:api:form": "cp -r ../form/dist/docs ./dist/api/form",
		"build:api:crud": "cp -r ../crud/dist/docs ./dist/api/crud",
		"publish": "gh-pages -d dist"
	},
	"author": "Piotr Kosmowski",
	"license": "MIT",
	"devDependencies": {
		"@compodoc/compodoc": "^1.0.5",
		"gh-pages": "^1.1.0"
	}
}
