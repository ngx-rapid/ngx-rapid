{
  "name": "@ngx-rapid/site",
  "version": "0.0.1-1",
  "author": "Piotr Kosmowski",
  "license": "MIT",
  "private": true,
  "description": "Documentation site for ngx-rapid products",
  "repository": {
    "type": "git",
    "url": "https://github.com/ngx-rapid/ngx-rapid/tree/master/packages/site"
  },
  "scripts": {
    "clean": "rm -rf ./dist",
    "ng": "ng",
    "start": "ng serve",
    "build": "ng build",
    "test": "ng test --single-run",
    "testing": "ng test",
    "lint": "ng lint",
    "e2e": "ng e2e",
    "site": "rm -rf ./dist/ && npm run build && npm run build:api && npm run postprocess",
    "build:api": "mkdir ./dist/api && npm run build:api:core && npm run build:api:form && npm run build:api:crud",
    "build:api:core": "cp -r ../core/dist/docs ./dist/api/core",
    "build:api:form": "cp -r ../form/dist/docs ./dist/api/form",
    "build:api:crud": "cp -r ../crud/dist/docs ./dist/api/crud",
    "postprocess": "replace '__CURRENT_VERSION__' $npm_package_version dist -r",
    "deploy": "gh-pages -d dist -r https://${GH_TOKEN}@github.com/ngx-rapid/ngx-rapid.github.io.git -b master -g $npm_package_version"
  },
  "dependencies": {
    "@angular/animations": "^5.2.3",
    "@angular/cdk": "^5.1.1",
    "@angular/common": "^5.0.0",
    "@angular/compiler": "^5.0.0",
    "@angular/core": "^5.0.0",
    "@angular/forms": "^5.0.0",
    "@angular/http": "^5.0.0",
    "@angular/material": "^5.1.1",
    "@angular/platform-browser": "^5.0.0",
    "@angular/platform-browser-dynamic": "^5.0.0",
    "@angular/router": "^5.0.0",
    "core-js": "^2.4.1",
    "rxjs": "^5.5.2",
    "zone.js": "^0.8.14"
  },
  "devDependencies": {
    "@angular/cli": "^1.6.0",
    "@angular/compiler-cli": "^5.0.0",
    "@angular/language-service": "^5.0.0",
    "@compodoc/compodoc": "^1.0.5",
    "@types/jasmine": "~2.5.53",
    "@types/jasminewd2": "~2.0.2",
    "@types/node": "^6.0.96",
    "codelyzer": "^4.0.1",
    "gh-pages": "^1.1.0",
    "jasmine-core": "~2.6.2",
    "jasmine-spec-reporter": "~4.1.0",
    "karma": "~1.7.0",
    "karma-chrome-launcher": "~2.1.1",
    "karma-cli": "~1.0.1",
    "karma-coverage-istanbul-reporter": "^1.2.1",
    "karma-jasmine": "~1.1.0",
    "karma-jasmine-html-reporter": "^0.2.2",
    "markdown-loader": "^2.0.2",
    "prism-hightlight-loader": "^0.1.1",
    "prismjs-loader": "0.0.4",
    "protractor": "~5.1.2",
    "raw-loader": "^0.5.1",
    "replace": "^0.3.0",
    "ts-node": "~3.2.0",
    "tslint": "~5.7.0",
    "typescript": "~2.4.2"
  }
}
