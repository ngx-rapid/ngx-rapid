{
  "compileOnSave": false,
  "compilerOptions": {
    "outDir": "./dist/out-tsc",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "target": "es5",
    "typeRoots": [
      "node_modules/@types"
    ],
    "paths": {
      "@ngx-rapid/core": ["./core/src/index"],
      "@ngx-rapid/form": ["./form/src/index"],
      "@ngx-rapid/crud": ["./crud/src/index"],
      "*": ["site/node_modules/*"]
    },
    "baseUrl": "../",
    "rootDir": "../",
    "lib": [
      "es2017",
      "dom"
    ]
  }
}
